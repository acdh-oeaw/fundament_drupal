
<div class="form-group detail-box">
    <div class="field__label">
        <label>{{ label }}</label>
    </div>
    <table class="table fundament-relations-table">
        <thead>
            <tr>
                <th scope="col">Person</th>
                <th scope="col">Relation</th>
                <th scope="col">Affiliated institution</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
               {{ item.content }}
            {% endfor %}
        </tbody>
    </table>
</div>